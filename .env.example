# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ecomlatam

# Session Configuration
SESSION_SECRET=your-secure-session-secret-here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Email Configuration (Alternative - Nodemailer/SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application URL (for emails and redirects)
APP_URL=http://localhost:5000

# Shopify Integration
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_APP_URL=http://localhost:5000
# Fulfillment Service scopes - more specific and privacy-focused
SHOPIFY_SCOPES=read_products,write_products,read_assigned_fulfillment_orders,write_assigned_fulfillment_orders,write_fulfillments

# Replit Configuration (if deploying to Replit)
REPLIT_DOMAINS=your-app.replit.app
